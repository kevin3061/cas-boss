<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="tv.acframework.oss.boss.entity.RtsRoleRights" table="platform_rts_role_rights">
        <id name="id" type="java.lang.Integer">
            <column name="id">
            	<comment>角色权限ID号</comment>
            </column>
            <generator class="tv.acframework.oss.boss.id.IDGenerator" />
        </id>
        
        <property name="createTime" type="java.util.Date">
            <column name="create_time">
                <comment>创建日期</comment>
            </column>
        </property>
        <property name="updateTime" type="java.util.Date">
            <column name="update_time">
                <comment>修改日期</comment>
            </column>
        </property>
        <property name="lastOperatorId" type="java.lang.Integer">
            <column name="last_operator_id">
                <comment>最后修改操作人ID</comment>
            </column>
        </property>
        <property name="lastOperatorName" type="java.lang.String">
            <column name="last_operator_name" length="64">
                <comment>最后修改操作人姓名</comment>
            </column>
        </property>
        
        <many-to-one name="rtsRole" class="tv.acframework.oss.boss.entity.RtsRole" fetch="join" lazy="false">
            <column name="role_id" not-null="true" />
        </many-to-one>
        <many-to-one name="rtsRights" class="tv.acframework.oss.boss.entity.RtsRights" fetch="join" lazy="false">
            <column name="rights_id" not-null="true" />
        </many-to-one>
    </class>
</hibernate-mapping>
